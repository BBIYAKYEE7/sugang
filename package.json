{
  "name": "sugang-app",
  "version": "1.0.0",
  "description": "고려대학교 수강신청 Electron 앱",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:website\"",
    "dev:electron": "electron .",
    "dev:website": "cd website && npm start",
    "build": "npm run build:website && npm run build:electron",
    "build:website": "cd website && npm run build",
    "build:electron": "npm run icons:generate && electron-builder",
    "install:website": "cd website && npm install",
    "install:electron": "npm install",
    "icons:generate": "electron-icon-builder --input=./image/logo.png --output=./build --flatten"
  },
  "keywords": ["electron", "sugang", "korea-university"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "concurrently": "^8.2.2",
    "electron-icon-builder": "^2.0.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.sugang.app",
    "productName": "수강신청 앱",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "node_modules/**/*",
      "image/**/*"
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build"
    }
  }
}
